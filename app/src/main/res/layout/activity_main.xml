<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.emartin.calculator.MainActivity"
    android:paddingBottom="20dp"
    android:background="#416ed8"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/user_input"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#282626"
            android:textColor="#efefef"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        >

        <Button
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:background="#afe6f7"
            android:elevation="5dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:background="#afe6f7"
            android:elevation="5dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:background="#afe6f7"
            android:elevation="5dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:background="#afe6f7"
            android:elevation="5dp"
            android:layout_weight="1"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        >


        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:background="#afe6f7"
            android:elevation="5dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:background="#afe6f7"
            android:elevation="5dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:background="#afe6f7"
            android:elevation="5dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/subtract"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:background="#afe6f7"
            android:elevation="5dp"
            android:layout_weight="1"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        >

        <Button
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:background="#afe6f7"
            android:elevation="5dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:background="#afe6f7"
            android:elevation="5dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:background="#afe6f7"
            android:elevation="5dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/multiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:background="#afe6f7"
            android:elevation="5dp"
            android:layout_weight="1"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        >

        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:background="#afe6f7"
            android:elevation="5dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/divide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="/"
            android:background="#afe6f7"
            android:elevation="5dp"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        >

        <Button
            android:id="@+id/enter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/enter"
            android:background="#afe6f7"
            android:elevation="5dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/clear"
            android:background="#afe6f7"
            android:elevation="5dp"
            android:layout_weight="1"
            />

    </LinearLayout>

</LinearLayout>
