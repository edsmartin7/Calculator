    <Button
        android:id="@+id/add"
        android:layout_width="73dp"
        android:layout_height="41dp"
        android:layout_weight="1"
        android:background="#afe6f7"
        android:elevation="5dp"
        android:text="+"
        tools:layout_editor_absoluteX="299dp"
        tools:layout_editor_absoluteY="168dp" />

    <Button
        android:id="@+id/four"
        android:layout_width="73dp"
        android:layout_height="41dp"
        android:layout_weight="1"
        android:background="#afe6f7"
        android:elevation="5dp"
        android:text="4"
